/* pages/share/inviteStaff/inviteStaff.wxss */
.canvas-bg{
  padding:100rpx 78rpx;
}
.canvas{
  width:595rpx;
  height:909rpx;
  margin-bottom: 44rpx;
}
.save-canvas{
  background: #F56A32;
  color:#fff;
  font-size:32rpx;
}
.share-body{
  width: 100%;
  min-height: 100vh;
  height: auto;
  position: relative;
}
.share-img-bg{
  width: 100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
  background: #eee;
}
.shadow-body{
  width: 594rpx;
  height:558rpx;
  margin: 306rpx auto; 
  padding:48rpx 44rpx;
}
.shadow-title{
  text-align: center;
  width: 100%;
  position: relative;
}
.close-shadow{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  top:0;
  right:0;
}
.shadow-msg{
  width: 100%;
  margin-top: 62rpx;
  /* display: flex;
  justify-content: space-between; */
  text-align: center;
}
.shadow-msg-model{
  width: 238rpx;
  height:324rpx;
  position: relative;
  background: #eee;
  border-radius: 16rpx;
}
.shadow-msg-model-img,.shadow-msg-model-btn{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left:0;
}
.shadow-msg-model-btn{
  opacity: 0;
}