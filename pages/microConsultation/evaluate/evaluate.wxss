/* pages/microConsultation/evaluate/evaluate.wxss */
.evaluate-body{
  padding:48rpx 31rpx;
}
.evaluate-head{
  padding-bottom:46rpx;
  border-bottom:1px solid #eee;
}
.evaluate-head-user{
  width: 84rpx;
  height:84rpx;
  border-radius: 50%;
  background: #eee;
  vertical-align: top;
  margin-right: 19rpx;
}
.evaluate-head-msg{
  vertical-align: top;
}
.evaluate-head-name{
  font-size:30rpx;
  font-weight: bold;
}
.evaluate-head-position{
  font-size:24rpx;
  color:#999;
  margin-top: 5rpx;
}
.expert-img{
  width:24rpx;
  height:24rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
}
.evaluate-content-title{
  font-size:30rpx;
  color:#999;
  margin: 50rpx 0 36rpx 0;
}
.evaluate-content-star>image{
  width: 52rpx;
  height:48rpx;
  margin-right: 20rpx;
}
.evaluate-content-star{
  text-align: center;
}
.evaluate-textarea{
  width:100%;
  height:421rpx;
  background:rgba(248,248,248,1);
  border:1px solid rgba(238,238,238,1);
  border-radius:16rpx;
  padding:36rpx 33rpx;
  margin-top: 61rpx;
}
.sub-evaluate{
  width: 100%;
  position: absolute;
  bottom:40rpx;
  left:0;
  padding:43rpx;
}
.sub-evaluate>button{
  height: 88rpx;
  line-height: 88rpx;
  color:#fff;
  font-size:32rpx;
  background: #F56A32;
}