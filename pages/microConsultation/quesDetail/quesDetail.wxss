/* pages/microConsultation/quesDetail/quesDetail.wxss */
.expert-img{
  width:24rpx;
  height:24rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
}
.quesDetail-body{
  background: #F4F7FD;
  min-height: 100vh;
  height: auto;
}
.quesDetail-ques{
  padding:35rpx;
  background: #fff;
}
.quesDetail-ques-head-img{
  width: 84rpx;
  height:84rpx;
  vertical-align: top;
  margin-right: 20rpx;
  border-radius: 50%;
  background: #eee;
}
.quesDetail-ques-head-msg{
  vertical-align: top;
  margin-top:10rpx;
}
.quesDetail-ques-head-name{
  font-size: 30rpx;
  color:#333;
}
.quesDetail-ques-head-date{
  font-size:24rpx;
  color:#999;
}
.quesDetail-ques-msg{
  font-size:30rpx;
  line-height: 45rpx;
  margin-top: 27rpx;
  margin-bottom: 30rpx;
  word-break: break-all;
}
.quesDetail-head-img-show{
  width: 140rpx;
  height: 140rpx;
  margin-right: 25rpx;
  border-radius: 8rpx;
}
.quesDetail-ques-footer{
  margin-top: 19rpx;
  font-size:24rpx;
  color:#999;
}
.quesDetail-ques-footer-img{
  width:20rpx;
  height:23rpx;
  vertical-align: middle;
}
.quesDetail-answer{
  background: #fff;
  padding:33rpx 0;
  margin-top: 18rpx;
}
.quesDetail-answer-title{
  margin-left: 36rpx;
  border-bottom: 1px solid #eee;
  font-size: 32rpx;
  font-weight: bold;
  height: 90rpx;
  line-height: 90rpx;
}
.quesDetail-ques-head{
  position: relative;
}
.quesDetail-answer-list{
  padding:42rpx 36rpx;
  border-bottom:1px solid #eee;
}
.answer-grade-btn{
  width:126rpx;
  height:54rpx;
  position: absolute;
  top:0;
  right:0;
}
.answer-grade-btn>text{
  width: 103rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color:#fff;
  background: #F56A32;
  border-radius: 4rpx;
  text-align: center;
}
.answer-img{
  width: 100%;
  height:100%;
}
.answer-pj{
  background: #F8F8F8;
  padding:31rpx;
  margin-top:31rpx;
}
.answer-pj-title>.orange{
  font-size:28rpx;
  font-weight: bold;
}
.assessmentResult-list-star{
  margin-left: 10rpx
}
.assessmentResult-list-star>image{
  width: 35rpx;
  height: 35rpx;
  margin-right:14rpx;
  margin-bottom: -5rpx
}
.answer-pj-msg{
  font-size:28rpx;
  color:#999;
  margin-top:20rpx;
}
.no-answer{
  font-size: 28rpx;
  color:999;
  margin:290rpx 0;
  text-align: center; 
}