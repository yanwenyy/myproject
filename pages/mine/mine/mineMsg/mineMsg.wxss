/* pages/mine/mine/mineMsg/mineMsg.wxss */
@import '../../../propaganda/editMsg/editMsg.wxss';
.mineMsg-body{
  padding:0 42rpx;
}
.mineMsg-head{
  text-align: center;
  margin-top:63rpx;
  margin-bottom: 25rpx;
}
.mineMsg-head>image{
  width: 185rpx;
  height:185rpx;
  border-radius: 50%;
  background: #eee;
}
.mineMsg-msg{
  padding:56rpx 0;
}
.editMsg-list-title{
  margin-bottom: 16rpx;
}
.sub-msg{
  margin-top: 97rpx;
}
.sub-msg-hy{
  padding:0 32rpx;
  margin-top:20rpx;
}
.sub-msg-hy>button{
  background: #F56A32;
  color:#fff;
  border:none;
  margin-bottom: 48rpx;
  font-size:32rpx;
}
.shadow-body{
  width:100%;
  background:#fff;
  height:60%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  position: absolute;
  bottom:0;
  left:0;
}
.shadow-body-title{
  width:100%;
  height:118rpx;
  line-height:117rpx;
  font-size:36rpx;
  font-weight: bold;
  text-align: center;
  position: relative;
  border-bottom:1px solid #eee;
}
.shadow-close{
  width:40rpx;
  height:40rpx;
  position: absolute;
  top:39rpx;
  right:56rpx;
}
.shadow-body-ul{
  padding:45rpx 54rpx;
  height:65%;
  overflow: auto;
}
.shadow-body-li{
  margin-bottom: 72rpx;
  display: block;
}
.shadow-body-li>view,.shadow-body-li-view{
  font-size:32rpx;
  width: 90%;
  vertical-align: middle
}
.shadow-body-li>image{
  width: 32rpx;
  height:32rpx;
  vertical-align: middle;
}
.sub-msg>button{
  background: #F56A32;
  height:88rpx;
  color:#fff;
  font-size:32rpx;
  border:none;
}
.input-picker-text{
  margin-right: 20rpx;
}
.hy-notice{
  font-size:20rpx;
  font-weight: normal;
  color:#999;
  width: 100%;
  position: absolute;
  bottom:-20rpx;
  left:0;
}