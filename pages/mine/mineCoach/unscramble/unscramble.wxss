/* pages/mine/mineCoach/unscramble/unscramble.wxss */
.unscramble-body{
  background:#F4F7FD;
}
.unscramble-head{
  background: #fff;
  margin-bottom: 15rpx;
  padding:40rpx 35rpx;
  font-size: 26rpx;
  color:#999;
}
.unscramble-head-title{
  color:#333;
  font-size:38rpx;
  font-weight:bold;
  margin-bottom: 33rpx
}
.unscramble-head-source{
  font-size:28rpx;
  margin-bottom: 19rpx;
}
.unscramble-msg{
  background: #fff;
}
.unscramble-msg-tab{
  height:105rpx;
  line-height: 105rpx;
  width:auto;
  font-size: 32rpx;
  color:#999;
  white-space:nowrap;
  border-bottom:1px solid #eee;
}
.unscramble-tab-li{
  display: inline-block;
  margin: 0 47rpx;
  box-sizing: border-box;
  height:100%;
}
.unscramble-tab-li-act{
  color:#F45B2B;
  border-bottom:8rpx solid #F45B2B;
}
.unscramble-msg-body{
  padding:43rpx 40rpx;
  padding-bottom: 450rpx;
}
.unscramble-msg-body::after{
  display: table;
  content:'';
}
.unscramble-msg-enclosure{
  width:100%;
  height:auto;
  padding:49rpx 52rpx;
  background:rgba(244,247,253,1);
  border-radius:16rpx;
  margin-top:47rpx;
}
.unscramble-msg-enclosure-title{
  font-size: 26rpx;
  color:#999;
  line-height:40rpx;
}
.unscramble-msg-enclosure-li{
  margin-top:45rpx;
}
.unscramble-msg-enclosure-li>image{
  width:72rpx;
  height:67rpx;
  vertical-align: middle;
}
.unscramble-msg-enclosure-li>view{
  width: 80%;
  font-size:26rpx;
  vertical-align: middle;
  word-break: break-all;
}
.unscramble-btn{
  width:100%;
  position: fixed;
  bottom:0;
  left:0;
  display: flex;
  justify-content: space-between;
  padding:37rpx;
  background: #fff;
  z-index: 999;
}
.unscramble-btn-btn{
  width: 326rpx;
  height:88rpx;
  font-size:32rpx;
  color:#fff;
  border-radius: 12rpx;
  border:none;  
}
.unscramble-btn-test{
  background: #F45B2B
}
.unscramble-btn-assessment{
  background: #44CD98;
}
.zjjd-title{
  font-size:36rpx;
  color:#333;
  font-weight:bold;
}
.zjjd-model{
  width: 100%;
  height:auto;
  padding:47rpx 41rpx;
  font-size:30rpx;
  line-height: 45rpx;
  border-radius:16rpx;
  position: relative;
  margin-top:37rpx;
}
.zjjd-blue{
  background: #F7F9FE;
  border:1px solid rgba(227,234,248,1);
}
.zjjd-red{
  background: #FEFAF8;
  border:1px solid #FFE0D6;
}
.zjjd-green{
  background: #F9FFFE;
  border:1px solid #DBF7EC;
}
.zjjd-model-title{
  width:117rpx;
  height:59rpx;
  line-height: 59rpx;
  border-radius:16rpx;
  text-align: center;
  font-size: 28rpx;
  position: absolute;
  top:-25rpx;
  left:40rpx;
}
.zjjd-list .zjjd-model{
  margin:59rpx 0 72rpx 0!important;
}
.zjjd-list-title{
  margin-top:74rpx;
  font-size:36rpx;
  font-weight:bold;
  color:#F45B2B;
}
.zjjd-list-title-line{
  width:87rpx;
  height:8rpx;
  background:rgba(245,106,50,1);
  opacity:0.16;
}
.zjjd-list-title-two{
  font-size:32rpx;
  font-weight: bold;
  margin-bottom: 37rpx;
}
.zjjd-list-audio{
  width: 100%;
  text-align: center;
  background: #F45B2B;
  margin-bottom: 56rpx;
}
#myVideo{
  width: 100%;
  height:388rpx;
  border-radius: 16rpx;
}
.unscramble-sdjd-list{
  margin-bottom: 53rpx;
  border-bottom:1px solid #eee;
}
.unscramble-sdjd-list-title{
  font-size:32rpx;
  color:#333;
  font-weight: bold;
  margin-bottom: 27rpx;
}
.unscramble-sdjd-list-msg{
  font-size:28rpx;
  line-height: 44rpx;
  margin-bottom: 64rpx;
  width: 100%;
  overflow-x: auto;
}
.unscramble-sdjd-list-xgzc{
  width:100%;
  height:auto;
  padding:36rpx;
  box-shadow:0px -1px 16px 0px rgba(3,0,0,0.05);
  border-radius:16rpx;
  margin-bottom: 60rpx;
}
.unscramble-sdjd-list-xgzc-title{
  font-size:28rpx;
  font-weight:bold;
  line-height: 41rpx;
  margin-bottom: 14rpx;
}
.unscramble-sdjd-list-xgzc-filenum{
  font-size: 26rpx;
  color:#999;
  margin-bottom: 16rpx;
}
.unscramble-sdjd-list-xgzc-btn{
  font-size: 24rpx;
  text-align: right;
}
.unscramble-yw{
  width: 100%;
  overflow-x: auto;
}