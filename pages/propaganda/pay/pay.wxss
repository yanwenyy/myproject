/* pages/propaganda/pay/pay.wxss */
.pay-body{
  padding:37rpx 46rpx;
}
.pay-head{
  width:100%;
  height:320rpx;
  border-radius: 16rpx;
  position: relative;
  color:rgba(254,254,255,1);
}
.pay-bg,.pay-msg{
  width:100%;
  height:100%;
  position: absolute;
  top:0;
  left:0;
}
.pay-msg{
  padding:56rpx 51rpx;
}
.pay-msg-name{
  background:linear-gradient(270deg,rgba(225,172,140,1) 0%, rgba(252,239,212,1) 100%);
  -webkit-background-clip: text;
  color: transparent;
  font-size:43rpx;
  font-weight: bold;
}
.pay-msg-time{
  color: #FCEFD4;
  font-size: 30rpx;
  margin-top: 19rpx;
}
.pay-msg-money{
  color:#FCEFD4;
  font-size:26rpx;
  margin-top:68rpx;
  text-align: right;
}
.pay-msg-money>text{
  font-size: 36rpx;
}
.pay-list{
  margin-top: 58rpx;
  color:#999;
}
.pay-num{
  display: flex;
  justify-content: space-between;
}
.pay-title{
  font-size:32rpx;
  font-weight: bold;
  color: #333;
  vertical-align: middle;
}
.pay-num-list{
  margin-top: -15rpx;
}
.pay-list-date{
  margin-top: 24rpx;
}
.pay-num-list>text{
  font-size:24rpx;
  width:68rpx;
  height:59rpx;
  line-height: 59rpx;
  vertical-align: middle;
  text-align: center;
  border:1px solid #eee;
  border-radius: 4rpx;
  color: #333;
}
.pay-num-btn{
  color:#DCDCDC!important;
}
.pay-btn-group{
  position: absolute;
  bottom:36rpx;
  left:0;
  width: 100%;
  padding:0 36rpx;
}
.pay-btn-agreement{
  font-size:26rpx;
  color:#999;
  margin-bottom: 47rpx;
}
.checkbox .wx-checkbox-input{
  width: 30rpx;
  height:30rpx;
  margin-bottom: 5rpx;
}
.pay-btn-sub{
  height:88rpx;
  line-height: 88rpx;
  background:rgba(245,106,50,1);
  border-radius:12rpx;
  color:#fff;
  border:none;
  font-size:32rpx;
}
.pay-btn-sub>text{
  font-size:26rpx;
}